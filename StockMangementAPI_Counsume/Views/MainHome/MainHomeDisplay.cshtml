@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Welcome</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 50px;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            background: white;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
            border-radius: 10px;
        }

        h2 {
            margin-bottom: 20px;
        }

        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            text-decoration: none;
            color: white;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-admin {
            background-color: #ff5733;
        }

        .btn-user {
            background-color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Welcome! Choose Your Panel</h2>
        <a asp-action="Index" asp-controller="Home" class="btn btn-admin">Admin Panel</a>
        <a asp-action="Index" asp-controller="UserHome" class="btn btn-user">User Panel</a>
    </div>
</body>
</html>


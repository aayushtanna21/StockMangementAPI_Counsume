@model IEnumerable<StockMangementAPI_Counsume.Models.UserPurchaseReturnModel>
@{
	Layout = "_UserLayout";
}
@* <div class="card-sub"> *@
<div class="card">
	<div class="card-body">
		<h5 class="card-title">PurchaseReturn Data</h5>
		<a class="d-flex justify-content-end" asp-controller="UserPurchaseReturn" asp-action="PurchaseReturnForm">
			<button class="btn btn-primary" style="margin-top:20px">Add PurchaseReturn</button>
		</a>

		<table class="table table-striped" style="width:70%;margin-left:300px">
			<thead>
				<tr>
					<th scope="col">PurchaseID</th>
					<th scope="col">Product Name</th>
					<th scope="col">CustomerName</th>
					<th scope="col">SupplierName</th>
					<th scope="col">Quantity</th>
					<th scope="col">PurchaseDate</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var row in Model)
				{
					<tr>
						<td>@row.PurchaseReturnID</td>
						<td>@row.ProductName</td>
						<td>@row.CustomerName</td>
						<td>@row.SupplierName</td>
						<td>@row.Quantity</td>
						<td>@row.PurchaseReturnDate</td>

						<td><a asp-controller="UserPurchaseReturn" asp-action="PurchaseReturnForm" asp-route-PurchaseReturnID="@row.PurchaseReturnID"><button class="btn btn-success"><i class="bi bi-pencil"></i></button></a></td>
						<td>
							<a asp-controller="UserPurchaseReturn" asp-action="PurchaseReturnDelete" asp-route-PurchaseReturnID="@row.PurchaseReturnID">
								<button class="btn btn-danger" onclick="return confirm('Are you sure you want delete the data?')"><i class="bi bi-trash"></i></button>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>





